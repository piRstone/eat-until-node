<div class="col-12 col-md-6 mx-auto my-4">
    {{#if error}}

    <p>{{t "resetPassword.wrongToken"}}</p>

    {{else}}

    <p>{{t "resetPassword.explanation"}}</p>

    <form method="post" action="/confirm-password">
    <fieldset class="module aligned">
        <div class="form-wrapper">
            <div class="form-group field-password1">
                <label for="id_new_password1">{{t "resetPassword.newPassword"}}</label>
                <input id="id_new_password1" type="password" name="new_password" minlength="6" required />
                <input type="hidden" name="token" value="{{token}}" />
            </div>
        </div>
        <div class="text-center">
            <input class="btn btn-success" type="submit" value="{{t "resetPassword.changePassword"}}">
        </div>
    </fieldset>
    </form>

    {{/if}}
</div>
